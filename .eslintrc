{
    "root": true,
    "extends": ["wesbos"],
    "rules": {
        "prefer-const": "off",
        "prettier/prettier": [
            "error",
            {
                "arrowParens": "always",
                "bracketSpacing": true,
                "endOfLine": "lf",
                "printWidth": 80,
                "semi": true,
                "singleQuote": true,
                "tabWidth": 2,
                "trailingComma": "es5",
                "useTabs": false
            }
        ]
    }
}
